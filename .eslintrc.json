{
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "globals": {
    "APP_SETTINGS": true,
    "ApexCharts": true,
    "DocumentTouch": true,
    "flatpickr": true,
    "$": true,
    "$win": true,
    "$doc": true,
    "$body": true,
    "$hbody": true,
    "QRCode": true,
    "Stripe": true,
    "Smallchat": true
  },
  "rules": {
    "no-console": "off",
    "indent": "off",
    "quotes": [
      "warn",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "warn",
      "always"
    ]
  }
}
